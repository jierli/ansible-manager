#!/bin/bash
#
#chkconfig: 2345 80 90
#description: mongodb
start() {
 {{ mongodb_base_dir }}/bin/mongod -f /etc/mongod_{{ mongodb_port }}.conf
}

stop() {
 {{ mongodb_base_dir }}/bin/mongod -f /etc/mongod_{{ mongodb_port }}.conf --shutdown
}

case "$1" in
  start)
 start
 ;;
  
stop)
 stop
 ;;
  
restart)
 stop
 start
 ;;
  *)
 echo 
$"Usage: $0 {start|stop|restart}"
 exit 1
esac
